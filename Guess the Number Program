#include <iostream>
#include <cstdlib>
#include <ctime>

using namespace std;

int main()
{
    
    //generate random number
    
    srand(time(0));
    int ranNum = rand()%101;
    
    //present game to user 
    
    cout<< ranNum << endl;
    cout<<"Guess the number (1-100)!\nI will tell you if you need to go higher or lower.\n\n";
    int guess=0;

do{ 
    
    //place for user to guess number 
    
    cout<<"Your guess: ";
    cin>> guess;
    
    //win

    if (guess==ranNum) {
        cout<<"\nCorrect! The number was "<<ranNum<<"!";
    } 
    
    //try again... go higher/lower
    
    else if (guess>ranNum) {
        cout<<"Go lower\n\n"; 
    } else {
        cout<<"Go higher\n\n";
    }
}while (guess != ranNum);

    return 0;
}
