#include <iostream>
#include <cstdlib>
#include <ctime>

using namespace std;

int main()
{
    srand(time(0));
    char answer;
    
do{
    
    //generate random number
    
    int ranNum = rand()%100 + 1;
    
    //present game to user 
    
    cout<<"\n\n\nGuess the number (1-100)!\nI will tell you if you need to go higher or lower.\n\n";
    int guess=0;
    
    //place for user to guess number 
do{ 
    
    do{ 
    cout<<"Your guess: ";
    cin>> guess;

if (cin.fail()) {
        cin.clear();                
        cin.ignore(1000, '\n');     
        cout << "Error. Please try again.\n\n";
        continue;                    
    }


if (guess<1||guess>100) {
cout<< "Error. Please try again.\n\n";
    
}
    
    }  while (guess<1||guess>100);  


    //win

    if (guess==ranNum) {
        cout<<"\nCorrect! \nThe number was "<<ranNum<<"!";
    } 
    
    //try again... go higher/lower
    
    else if (guess>ranNum) {
        cout<<"Go lower\n\n"; 
    } else {
        cout<<"Go higher\n\n";
    }
}while (guess != ranNum);

    //ask user play again

cout<<"\n\nPlay again (y/n)?: ";
cin>>answer;

    //repeat game if yes 

}while (answer=='y'||answer=='Y');

    return 0;
}
